# 生产环境配置
FLASK_ENV=production
SECRET_KEY=your-very-secure-secret-key-change-this-in-production-2024
PORT=5000
FLASK_APP=app.py
PYTHONPATH=/app

# 数据库配置 - SQLite
USE_SQLITE=true
DATABASE_URL=sqlite:///./data/card_query.db

# 时区配置
TZ=Asia/Shanghai

# 外部API配置
CAPTCHA_API_URL=http://1.15.137.19:3000/
CAPTCHA_API_TIMEOUT=10

# SQLite配置（连接池配置对SQLite不适用）
# SQLite使用文件锁机制，无需连接池配置

# 应用配置
DEBUG=false
LOG_LEVEL=INFO

# HTTPS配置
HTTPS_ENABLED=false
FORCE_HTTPS=false
SSL_CERT_PATH=ssl/cert.pem
SSL_KEY_PATH=ssl/key.pem

# 安全配置
SESSION_TIMEOUT=24
MAX_CONTENT_LENGTH=16777216

# 性能配置
WORKERS=2
TIMEOUT=120

# 端口配置
APP_PORT=5000

# 资源限制配置（SQLite版本资源需求更低）
APP_MEMORY_LIMIT=256
APP_CPU_LIMIT=0.5
APP_MEMORY_RESERVATION=128
APP_CPU_RESERVATION=0.25
